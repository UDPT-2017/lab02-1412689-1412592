
<div class="col-lg-12">
    <img class="img-responsive" src="https://blackrockdigital.github.io/startbootstrap-freelancer/img/profile.png">
</div>
<div class="intro-text">
    <h1 class="name">MY MESSAGE</h1>
    <ul class="list-inline">
     {{#if user}}
      <h1> Xin chào, {{user.username}} !!! </h1>
      <br>
      
      <li>
         <a href="messages/{{user.id}}" class="btn btn-default btn-lg"><i class="fa fa-inbox fa-fw"></i> <span class="network-name">Message</span></a>
      </li>
      <li>
         <a href="/logout" class="btn btn-default btn-lg"><i class="fa fa-sign-in fa-fw"></i> <span class="network-name">Thoát</span></a>
      </li>
        
                            
     {{else}}
                                
        
            <li><a href="/signup" class="btn btn-default btn-lg"><i class="fa fa-sign-in fa-fw"></i> <span class="glyphicon glyphicon-user"></span> Đăng Ký</a></li>
            <li><a href="/login" class="btn btn-default btn-lg"><i class="fa fa-sign-in fa-fw"></i> <span class="glyphicon glyphicon-log-in"></span> Đăng Nhập</a></li>

      {{/if}}
    </ul>
</div>
